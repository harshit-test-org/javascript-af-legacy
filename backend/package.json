{
  "name": "javascript-af-api",
  "version": "1.0.0-beta.1",
  "main": "start.js",
  "now": {
    "name": "jsapi",
    "alias": "jsapi",
    "dotenv": ".env.now",
    "scale": {
      "sfo1": {
        "min": 1,
        "max": 3
      },
      "bru1": {
        "min": 1,
        "max": 3
      }
    }
  },
  "scripts": {
    "start": "NODE_ENV=production node dist/start.js",
    "dev": "nodemon --exec babel-node src/start.js",
    "build": "babel src/ -d dist/ --source-maps",
    "prebuild": "rm -rf dist/",
    "deploy": "now && now alias",
    "format": "prettier --trailing-comma es5 --no-semi --single-quote --write \"src/**/*.js\"",
    "precommit": "lint-staged && mocha",
    "test": "jest --coverage"
  },
  "dependencies": {
    "algoliasearch": "^3.27.0",
    "apollo-engine": "^1.1.0",
    "apollo-server-express": "^1.3.5",
    "axios": "^0.18.0",
    "compression": "^1.7.2",
    "connect-mongo": "^2.0.1",
    "cors": "^2.8.4",
    "date-fns": "^1.29.0",
    "dotenv": "^6.0.0",
    "express": "^4.16.3",
    "express-session": "^1.15.6",
    "graphql": "^0.13.2",
    "graphql-tools": "^3.0.1",
    "helmet": "^3.12.1",
    "hpp": "^0.2.2",
    "marky-markdown": "^12.0.0",
    "merge-graphql-schemas": "^1.5.1",
    "mongoose": "^5.1.7",
    "morgan": "^1.9.0",
    "raven": "^2.6.2",
    "slug": "^0.9.1"
  },
  "devDependencies": {
    "@babel/cli": "7.0.0-beta.49",
    "@babel/core": "7.0.0-beta.49",
    "@babel/node": "7.0.0-beta.49",
    "@babel/plugin-proposal-object-rest-spread": "7.0.0-beta.49",
    "@babel/preset-env": "7.0.0-beta.49",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^8.2.3",
    "eslint": "^4.19.1",
    "eslint-config-prettier": "^2.9.0",
    "eslint-config-standard": "^11.0.0",
    "eslint-plugin-import": "^2.12.0",
    "eslint-plugin-node": "^6.0.1",
    "eslint-plugin-prettier": "^2.6.0",
    "eslint-plugin-promise": "^3.7.0",
    "eslint-plugin-standard": "^3.0.0",
    "flightplan": "^0.6.17",
    "husky": "^0.14.3",
    "jest": "^22.4.4",
    "lint-staged": "^7.0.4",
    "nodemon": "^1.17.3",
    "prettier": "^1.12.1"
  },
  "license": "GPL-3.0",
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  }
}
